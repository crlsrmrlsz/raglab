# RAGLab Environment Configuration
# Copy to .env and fill in your values

# =============================================================================
# REQUIRED: OpenRouter API for LLM calls (embedding, generation, extraction)
# =============================================================================
OPENROUTER_API_KEY=your_openrouter_api_key_here

# =============================================================================
# OPTIONAL: Override defaults
# =============================================================================

# Weaviate Vector Database
# WEAVIATE_HOST=localhost
# WEAVIATE_HTTP_PORT=8080
# WEAVIATE_GRPC_PORT=50051

# Neo4j Graph Database (GraphRAG)
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=raglab_graphrag

# Model Selection
# EMBEDDING_MODEL_ID=openai/text-embedding-3-large
# PREPROCESSING_MODEL=anthropic/claude-sonnet-4-20250514
# GENERATION_MODEL=anthropic/claude-sonnet-4-20250514

# Pipeline Parameters
# MAX_CHUNK_TOKENS=800
# OVERLAP_SENTENCES=2
# SPACY_MODEL=en_core_sci_sm
